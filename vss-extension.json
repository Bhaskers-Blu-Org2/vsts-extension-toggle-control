{
    "manifestVersion": 1,
    "id": "toggle-control",
    "version": "0.1.2",
    "name": "Toggle Control",
    "scopes": [
        "vso.work",
        "vso.work_write"
    ],
    "description": "Add a toggle control to a work item type.",
    "publisher": "ms-devlabs",
    "icons": {
        "default": "img/control.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work items",
        "Work item control"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "links": {
        "learn": {
            "uri": "https://github.com/Microsoft/vsts-extension-toggle-control/blob/master/README.md"
        },
        "support": {
            "uri": "https://github.com/Microsoft/vsts-extension-toggle-control"
        },
        "repository": {
            "uri": "https://github.com/Microsoft/vsts-extension-toggle-control"
        },
        "issues": {
            "uri": "https://github.com/Microsoft/vsts-extension-toggle-control/issues"
        }
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "dist",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "styles",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "toggle-control-contribution",
            "type": "ms.vss-work-web.work-item-form-control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Toggle",
                "group": "contributed",
                "uri": "index.html",
                "height": 28,
                "inputs": [
                    {
                        "id": "FieldName",
                        "name": "Choose field to back the control",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["Boolean", "String", "Integer"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "TrueFieldValue",
                        "name": "Value when true",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "TrueLabel",
                        "name": "Label when true",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "FalseFieldValue",
                        "name": "Value when false",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "FalseLabel",
                        "name": "Label when false",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }
                ]
            }
        }
    ]
}